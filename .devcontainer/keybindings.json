[
    {
        "key": "ctrl+shift+m",
        "command": "type",
        "args": { "text": " |> " },
        "when": "editorLangId == 'r' || (editorTextFocus && editorLangId == 'quarto') || activeCustomEditorId == 'quarto.visualEditor'"
    },
    {
        "key": "alt+-",
        "command": "type",
        "args": { "text": " <- " },
        "when": "editorLangId == 'r' || (editorTextFocus && editorLangId == 'quarto') || activeCustomEditorId == 'quarto.visualEditor'"
    },
    {
        "key": "ctrl+shift+m",
        "command": "type",
        "args": { "text": " |> " },
        "when": "editorTextFocus && editorLangId == 'rmd'"
    },
    {
        "key": "alt+-",
        "command": "type",
        "args": { "text": " <- " },
        "when": "editorTextFocus && editorLangId == 'rmd'"
    },
    {
        "key": "ctrl+shift+m",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": " |> " },
        "when": "terminalFocus"
    },
    {
        "key": "alt+-",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": " <- " },
        "when": "terminalFocus"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.terminal.clear",
        "when": "terminalFocus"
    }
]
